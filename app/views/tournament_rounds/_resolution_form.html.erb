<div class="modal" id="resolutionModal<%= id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Select a round winner</h4>
      </div>
      <%= form_tag(url, :html => {:class => "form-horizontal"}) do %>

      <div class="modal-body">
        <p>Pick a round winner for this tournament round</p>

        <div class="input">
          <%= label_tag :winner, nil, :class => "help-inline" %><br>
          <%= select_tag :team_id, options_for_select(teams.collect{|t| [t.name, t.id]}), {:class => "form-control"} %>
        </div>
      </div>
      <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn">Close</a>
        <%= submit_tag "Submit", :class => "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>