<%= form_for(@game_location, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @game_location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game_location.errors.count, "error") %> prohibited this game_location from being saved:</h2>

      <ul>
      <% @game_location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input">
    <%= f.label :user_id, :class => "help-inline" %><br>
    <%= f.collection_select :user_id, User.all, :id, :name,  {:selected => @game_location.user, :class => "span5"} %>
  </div>
  <div class="input">
    <%= f.label :game_id, :class => "help-inline" %><br>
    <%= f.collection_select :game_id, Game.all, :id, :name,  {:selected => @game_location.game, :class => "span5"} %>
  </div>
  <div class="input">
    <%= f.label :game_server_id, :class => "help-inline" %><br>
    <%= f.collection_select :game_social_server_id, GameSocialServer.all, :id, :name,  {:selected => @game_location.game_social_server, :class => "span5"} %>
  </div>
  <div class="input">
    <%= f.label :chat_server_id, :class => "help-inline" %><br>
    <%= f.collection_select :chat_server_id, ChatServer.all, :id, :name,  {:selected => @game_location.chat_server, :class => "span5"} %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-success" %>
  </div>
<% end %>
