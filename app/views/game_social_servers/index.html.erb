<h1 class="text-center">GAME SERVERS</h1>

<%= will_paginate @game_social_servers %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ip</th>
      <th>Port</th>
      <th>Game</th>
      <th>User</th>
      <th>Max players</th>
      <th>Current players</th>
      <th>Latency</th>
      <th>Current map</th>
      <th>Match type</th>
      <th>Region</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @game_social_servers.each do |game_social_server| %>
      <tr>
        <td><%= game_social_server.name %></td>
        <td><%= game_social_server.ip %></td>
        <td><%= game_social_server.port %></td>
        <td><%= game_social_server.game_name %></td>
        <td><%= game_social_server.user_name %></td>
        <td><%= game_social_server.max_players %></td>
        <td><%= game_social_server.current_players %></td>
        <td><%= game_social_server.latency %></td>
        <td><%= game_social_server.current_map %></td>
        <td><%= game_social_server.match_type %></td>
        <td><%= game_social_server.region %></td>
        <td><%= link_to 'Show', game_social_server, :class => "btn" %></td>
        <td><%= link_to 'Edit', edit_game_social_server_path(game_social_server), :class => "btn" %></td>
        <td><%= link_to 'Destroy', game_social_server, :class => "btn btn danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @game_social_servers %>

<br>

<%= link_to 'New Source Game Server', new_source_game_social_server_path, :class => "btn btn-warning" %>

<%= link_to 'New Manual Game server', new_game_social_server_path, :class => "btn btn-success" %>

