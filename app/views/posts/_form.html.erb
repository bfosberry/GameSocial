<%= form_for(@post, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div class="input">
    <%= f.label :title, :class => "help-inline" %><br>
    <%= f.text_field :title, :class => "span5" %>
  </div>
  <div class="input">
    <%= f.label :body, :class => "help-inline" %><br>
    <%= f.text_area :body, :class => "span5", :rows => "5" %>
  </div>
  <div class="input">
    <%= f.label :user_id, :class => "help-inline" %><br>
    <%= f.collection_select :user_id, User.all, :id, :name,  {:selected => @post.user, :class => "span5"} %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-success"%>
  </div>
<% end %>
