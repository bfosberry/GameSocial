<p id="notice"><%= notice %></p>


<table class="table table-condensed">
  <tr>
    <td><h5 class="text-center">Name</h5></td>
    <td><p class="text-center"><%= @user.name %></p></td>
  </tr>
  <tr>
    <td><h5 class="text-center">Email</h5></td>
    <td><p class="text-center"><%= @user.email %></p></td>
  </tr>
</table>

<h1 class="text-center">Your Steam Games</h1>
<a data-toggle="modal" href="#gameModal" class="btn btn-primary">Add a Game</a>
<%= grid(@steam_games_grid) do |g|

  g.blank_slate  do
    content_tag :div, "No Games found", class: 'well'
  end

  g.column name: 'Icon', attribute: 'logo_url', filter: false do |game|
    image_tag(game.logo_url, :crop => :fill, :class => "game_image")
  end

  g.column name: 'Name', attribute: 'name' do |game|
    game.name
  end
end -%>

<h1 class="text-center">Your Board Games</h1>
<a data-toggle="modal" href="#gameModal" class="btn btn-primary">Add a Game</a>
