<div class="panel panel-default">
  <div class="panel-heading">Summary</div>
  <ul class="list-group">
    <li class="list-group-item">Captain: <%= team.user_name %></li>
    <li class="list-group-item"><a data-toggle="modal" href="#inviteModal" class="btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Invite to Team</a></li>
  </ul>
</div>

<% if team.users.size > 0 %>
<div class="section-header-centered">
  <h2>Members</h2>
</div>
<div class="row">
  <% for i in 0..3 %>
    <div class="col-lg-3 col-md-3">
      <%  team.users.each_with_index do |u, index| %>
        <% if index % 4 == i %>
          <%= render "users/user", :u => u %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
<% end %>

<%= render '/events/invite_form', :type => "Team", :url => invite_team_path(team) %>
