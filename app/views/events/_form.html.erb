<%= form_for(@event, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input">
    <%= f.label :name, :class => "help-inline" %><br>
    <%= f.text_field :name, :class => "span5" %>
  </div>
  <div class="input">
    <%= f.label :description, :class => "help-inline"  %><br>
    <%= f.text_area :description, :class => "span5", :rows => "5" %>
  </div>
  <div class="input">
    <%= f.label :start_time, :class => "help-inline" %><br>
    <%= f.datetime_select :start_time, :class => "span5" %>
  </div>
  <div class="input">
    <%= f.label :end_time, :class => "help-inline" %><br>
    <%= f.datetime_select :end_time, :class => "span5" %>
  </div>
  <div class="input">
    <%= f.label :user_id, :class => "help-inline" %><br>
    <%=  f.collection_select :user_id, User.all, :id, :name,  {:selected => @event.user, :class => "span5"} %>
  </div>
  <div class="input">
    <%= f.label :location, :class => "help-inline" %><br>
    <%= f.text_field :location, :class => "span5" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
